<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="230.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ButtonBar prefHeight="40.0" prefWidth="188.0" AnchorPane.bottomAnchor="6.0" AnchorPane.leftAnchor="6.0" AnchorPane.rightAnchor="6.0" AnchorPane.topAnchor="184.0">
        <buttons>
            <Button fx:id="play" mnemonicParsing="false" onAction="#playNewGame" text="Play" />
          <Button layoutX="17.0" minWidth="55.0" mnemonicParsing="false" onAction="#exit" prefHeight="25.0" text="Exit" />
        </buttons>
      </ButtonBar>
      <Label layoutX="29.0" layoutY="15.0" prefHeight="25.0" prefWidth="147.0" text="Hexsweeper" textAlignment="CENTER">
         <font>
            <Font name="Calibri" size="28.0" />
         </font>
      </Label>
      <Label layoutX="25.0" layoutY="68.0" prefHeight="17.0" prefWidth="150.0" text="Choose difficulty:" />
      <Group layoutX="52.0" layoutY="112.0">
         <children>
            <RadioButton layoutX="-23.0" layoutY="38.0" mnemonicParsing="false" onAction="#setHard" text="Hard">
               <toggleGroup>
                  <ToggleGroup fx:id="difficulty" />
               </toggleGroup></RadioButton>
            <RadioButton layoutX="-23.0" layoutY="-18.0" mnemonicParsing="false" onAction="#setEasy" text="Easy" toggleGroup="$difficulty" />
            <RadioButton layoutX="-23.0" layoutY="7.0" mnemonicParsing="false" onAction="#setNormal" prefHeight="23.0" prefWidth="65.0" text="Normal" toggleGroup="$difficulty" />
         </children></Group>
   </children>
</AnchorPane>
